/ %a{ data: { bind: 'foreach: userChoices' } }
/   %a{ data: { bind: 'text: user_id' } }
/   %a{ data: { bind: 'text: choice' } }  

/ %a{ data: { bind: 'text: challenge' } }
/ %a{ data: { bind: 'text: loser_task' } }

%table.bet
  %tr
    %td.agree-side
      = link_to bet.owner do
        = image_tag '/assets/default_user.jpg', width: '200px', class: 'img-thumbnail'
      / - bet.user_choices.each do |user_choice|
      /   - if user_choice.choice
      /     %p= user_choice.user.username
    %td
      %p.vs VS
      %p.proposition-main
        %span.bolded= "#{bet.owner.username.capitalize} bets:"
        %span= bet.proposition
      %p.loser-task-main  
        %span= "The loser has to: #{bet.loser_task}"
    %td.disagree-side
      -if bet.disagreeing_choices.empty?
        %p= "CHALLENGE"
      -else 
        = link_to bet.disagreeing_choices[0].user do
          = image_tag '/assets/default_user.jpg', width: '200px', class: 'img-thumbnail'